<!DOCTYPE html>

@{
    string marathonName = "Наименование мероприятия";
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @marathonName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RunWebPage2024.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-default border-bottom navbar-toggleable navbar-light mb-3">
            <div class="container-fluid">
                <div class="navbar-header" width="fit-content">
                    <button class="navbar-toggler collapsed border-1 rounded" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" data-target="#LayoutMenuId">
                        <span class="sr-only text-nowrap"><img class="align-bottom" width="40px" src="~/pic/menu.png" />  <img width="40px" src="~/pic/runningMen.jpg" />Страница марафона " "</span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="LayoutMenuId">

                    <ul class="nav navbar-nav">
                        <li class="active">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная страница</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CompanyStatistic">Командное первенство</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OldResults">Результаты Марафона " " 2021</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
