    @model Tuple<List<RivalModel>, string>

@{
    if (Model.Item2 == "male")
    {
        <center>
        <h4>Мужчины</h4>
        </center>
    }
    else if (Model.Item2 == "female")
    {
        <center>
            <h4>Женщины</h4>
        </center>
    }
    else
    {
        <center>
            <h4>Все участники</h4>
        </center>
    }
}
<table id="personalResultPartialTable">
<thead>
    <tr>
        <th align="center">Позиция</th>
        <th align="center">Имя участника</th>
        <th align="center">Результат, км</th>
        <th align="center">Предприятие</th>
        <th align="center">Пол</th>
    </tr>
</thead>

<tbody>
    @{
        int position = 0;
        foreach (var rival in Model.Item1)
        {
            position++;
            <tr>
                <td id="@position" align="center">@position</td>
                <td align="center">@rival.Name</td>
                <td align="center">@rival.TotalResult</td>
                <td align="center">@rival.Company</td>
                <td align="center">@rival.Gender</td>
            </tr>
        }
    }
</tbody>
</table>